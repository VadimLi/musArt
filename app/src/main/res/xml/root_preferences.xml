<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
        android:key="category_of_memory"
        android:title="@string/memory">

        <SwitchPreference
            android:key="deleteOfAllCovers"
            android:defaultValue="false"
            android:title="@string/deleteOfAllCovers" />

    </PreferenceCategory>

    <PreferenceCategory android:title="@string/about" >
        <PreferenceScreen
            android:key="about"
            android:selectable="false"
            android:summary="@string/about_summary"/>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/support" >
        <PreferenceScreen
            android:key="support"
            android:summary="@string/support_text"/>
    </PreferenceCategory>

</PreferenceScreen>
