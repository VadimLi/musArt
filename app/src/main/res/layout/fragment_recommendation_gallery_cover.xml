<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/headerLayoutOfRecommendationGallery"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@null"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backFromRecommendationGallery"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:src="@mipmap/ic_return_foreground"
            android:contentDescription="@string/return_to_back" />
        <TextView
            android:id="@+id/nameOfRecommendationAlbum"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="18sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <TextView
            android:id="@+id/nameOfRecommendationGroup"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <ImageView
            android:id="@+id/moreOfRecommendationCover"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/more_of_cover"
            android:src="@mipmap/ic_more_foreground" />
    </RelativeLayout>
    <com.example.musArt.view.custom.HackyViewPager
        android:id="@+id/coverRecommendationPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
