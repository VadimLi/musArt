<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recommendationLinearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="75dp"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:background="?android:attr/selectableItemBackground"
    android:paddingRight="0dp"
    android:paddingEnd="0dp"
    android:paddingLeft="10dp"
    android:paddingStart="10dp"
    android:paddingBottom="2dp"
    android:paddingTop="2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/artRecommendationOfAlbum"
        android:layout_width="50dp"
        android:layout_height="50dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingRight="15dp"
        android:paddingEnd="15dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/albumRecommendationNameOfAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextOfAlbumName"
            android:layout_weight="0.5"
            android:textSize="16sp"
            tools:ignore="NestedWeights" />

        <TextView
            android:id="@+id/artistRecommendationNameOfAlbum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorTextOfArtistName"
            android:layout_weight="0.5"
            android:textSize="13.5sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/downloadOfRecommendationOfAlbum"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/download_of_cover"
        android:src="@mipmap/ic_download_of_cover_foreground" />

    <ProgressBar
        android:id="@+id/loaderOfAlbum"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:contentDescription="@string/download_of_cover"
        android:src="@mipmap/ic_abort_downloading_of_cover_foreground" />

    <ImageView
        android:id="@+id/moreOfRecommendationOfAlbum"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/more_of_cover"
        android:src="@mipmap/ic_more_of_cover_foreground" />

</LinearLayout>

