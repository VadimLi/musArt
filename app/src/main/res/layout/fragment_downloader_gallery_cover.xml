<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/downloaderGalleryLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true">
    <RelativeLayout
        android:id="@+id/headerLayoutOfDownloaderGallery"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@null"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/backFromDownloaderGallery"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:src="@mipmap/ic_return_foreground"
            android:contentDescription="@string/return_to_back" />
        <TextView
            android:id="@+id/nameOfDownloaderAlbum"
            android:layout_width="230dp"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textSize="17sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <TextView
            android:id="@+id/nameOfDownloaderGroup"
            android:layout_width="230dp"
            android:layout_height="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            android:textAlignment="center"
            android:textSize="15sp"
            android:ellipsize="end"
            android:maxLines="1" />
        <ImageView
            android:id="@+id/moreOfDownloaderCover"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/more_of_cover"
            android:src="@mipmap/ic_more_foreground" />
    </RelativeLayout>
    <com.example.musArt.view.custom.HackyViewPager
        android:id="@+id/coverDownloaderPager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
